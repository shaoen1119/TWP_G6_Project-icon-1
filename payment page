    display: flex;
    justify-content: space-between; /* 在文本和箭头之间留出空间 */
    align-items: center; /* 垂直居中对齐 */
    cursor: pointer; /* 添加鼠标指针效果 */
}
.payment-method:last-child {
    border-bottom: none; 
}
.arrow {
    width: 16px; /* 设置箭头图片的宽度 */
    height: auto; /* 保持图片的纵横比 */
}
.hidden {
    display: none;
}
.payment-container input {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
