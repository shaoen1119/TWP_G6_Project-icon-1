<body>
    <div class="payment-container">
        <div id="payment-methods">
            <h2>Payment Method</h2>
            <div class="payment-method" onclick="showCreditDebitCard()">
                Credit/Debit Card
                <img src="Icon/next page.png" class="arrow">
            </div>
            <div class="payment-method" onclick="showTNG()">
                Touch 'n Go (TNG)
                <img src="Icon/next page.png" class="arrow">
            </div>
        </div>
        <div id="credit-debit-card" class="hidden">
            <h2>Credit/Debit Card Payment</h2>
            <input type="text" placeholder="Card Number">
            <input type="text" placeholder="Card Holder Name">
            <input type="text" placeholder="Expiry Date">
            <input type="text" placeholder="CVV">
            <button onclick="goBack()">Pay Now</button>
        </div>
        <div id="tng" class="hidden">
            <h2>Touch 'n Go Payment</h2>
            <p>Total Amount: RM100.00</p>
            <button onclick="goBack()">Proceed</button>
        </div>
    </div>

    <script>
        function showCreditDebitCard() {
            document.getElementById('payment-methods').classList.add('hidden');
            document.getElementById('credit-debit-card').classList.remove('hidden');
        }

        function showTNG() {
            document.getElementById('payment-methods').classList.add('hidden');
            document.getElementById('tng').classList.remove('hidden');
        }

        function goBack() {
            document.getElementById('credit-debit-card').classList.add('hidden');
            document.getElementById('tng').classList.add('hidden');
            document.getElementById('payment-methods').classList.remove('hidden');
        }
    </script>
